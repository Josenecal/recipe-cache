<% error = flash[:error]%>
<% if error %>
    <div class="warnings">
        <%= error %>
    </div>
<% end %>
<div class = "user_creation_form", show = false>
    Create an account by entering your information below:
    <%= form_with url: "/user/create", local: true do |f| %>
        <%= f.label :"email" %>
        <%= f.text_field :email, required: true %><br>
        <%= f.label :"password" %>
        <%= f.password_field :password, required: true %><br>
        <%= f.label :"confirm password" %>
        <%= f.password_field :password_confirmation, required: true %><br>
        <%= f.submit "Create Account"%>
     <% end %>
</div>